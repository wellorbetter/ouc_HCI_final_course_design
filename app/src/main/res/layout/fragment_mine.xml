<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.mineFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="180dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_gravity="right|center"
            android:layout_height="20dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="90dp">
                <ImageView
                    android:src="@drawable/mine_fragment_my_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="默认昵称"
                        android:textSize="24sp"
                        android:gravity="left|bottom"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="默认ID"
                        android:textColor="@color/gray_8f"
                        android:textSize="12sp"
                        android:gravity="left|center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:text="233"
                        android:gravity="center"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="收藏"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:text="233"
                        android:gravity="center"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="历史浏览"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:text="233"
                        android:gravity="center"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="关注"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:text="233"
                        android:gravity="center"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="粉丝"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:text="233"
                        android:gravity="center"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="帖子"
                        android:layout_height="0dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray_8f"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/mine_fragment_my_published"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:text="我发布的"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/mine_fragment_my_sold"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:text="我卖出的"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:src="@drawable/mine_fragment_my_purchased"
                android:layout_height="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:text="我买到的"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:src="@drawable/mine_fragment_my_resold"
                android:layout_height="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:gravity="center"
                android:text="我可转卖的"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_8f"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:text="发布商品"
                    android:layout_margin="2dp"
                    android:id="@+id/btn_publish_goods"
                    android:textSize="24sp"
                    android:gravity="center|left"
                    android:layout_height="60dp" />
                <TextView
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:layout_width="match_parent"
                    android:text="我的帖子"
                    android:gravity="center|left"
                    android:textSize="24sp"
                    android:layout_height="60dp" />
                <TextView
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:layout_width="match_parent"
                    android:text="我的收货地址"
                    android:gravity="center|left"
                    android:textSize="24sp"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="我的个人信息"
                    android:textSize="24sp"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:gravity="center|left"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:text="切换账号"
                    android:id="@+id/btn_switch_account"
                    android:textSize="24sp"
                    android:layout_margin="2dp"
                    android:gravity="center|left"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/fragment_mine_personal_item"
                    android:text="退出登录"
                    android:layout_margin="2dp"
                    android:id="@+id/btn_logout_account"
                    android:textSize="24sp"
                    android:gravity="center|left"
                    android:layout_height="60dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>